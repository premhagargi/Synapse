rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own user document, but not write to it.
    // User documents are created/updated via authentication triggers.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; 
    }

    // Users can create, read, update, and delete their own documents.
    match /users/{userId}/documents/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
