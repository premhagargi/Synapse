{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        }
      },
      "required": ["uid", "email"]
    },
    "Document": {
      "title": "Document",
      "description": "A financial or compliance document uploaded by a user.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The document's unique ID."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who uploaded the document."
        },
        "fileName": {
          "type": "string",
          "description": "The original name of the uploaded file."
        },
        "fileContent": {
          "type": "string",
          "description": "The Base64 encoded content of the document."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The time the document was uploaded."
        },
        "analysis": {
          "type": "object",
          "properties": {
            "summary": {
              "type": "string",
              "description": "AI-generated summary of the document."
            },
            "extractedData": {
              "type": "object",
              "description": "Key data extracted from the document."
            },
            "complianceIssues": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "A list of potential compliance issues."
            }
          }
        }
      },
      "required": ["id", "userId", "fileName", "fileContent", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores public information about a user."
    },
    "/documents/{docId}": {
      "schema": {
        "$ref": "#/entities/Document"
      },
      "description": "Stores documents uploaded by any user, partitioned by userId field."
    }
  }
}
